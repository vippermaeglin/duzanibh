<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Duzani BH</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="font-size:20px">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img style="height:95px" ID="Logo" runat="server" src="~/images/logoduzanibhlight.png" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><BR/>@Html.ActionLink("Início", "Index", "Home")</li>
                    <li><BR />@Html.ActionLink("Coleções", "About", "Home")</li>
                    <li><BR />@Html.ActionLink("Cadastro", "Contact", "Home")</li>
                    <li><BR />@Html.ActionLink("Posts", "Blog", "Home")</li>
                    <li><BR />@Html.ActionLink("Consultoras", "Consultant", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div style="background-color:#BAA768;width:100%;left:0;padding:0;position:absolute;text-align:center;">
                <br />
                <br />
                <br />
                <div class="row">
                    <div class="col-md-3" style="text-align:center;">
                        <a href="https://www.facebook.com/pg/duzanibh" target="_blank">
                            <img src="~/images/facebook.png" alt="ASP.NET" />
                            <h3>FACEBOOK</h3>
                            <p>duzanibh</p>
                        </a>
                    </div>
                    <div class="col-md-3" style="text-align:center;">
                        <a href="https://www.instagram.com/explore/tags/belohorizonte.duzani" target="_blank">
                            <img src="~/images/instagram.png" alt="ASP.NET" />
                            <h3>INSTAGRAM</h3>
                            <p>duzanioficialbh</p>
                        </a>
                    </div>
                    <div class="col-md-3" style="text-align:center;">
                        <a href="mailto:belohorizonte@duzani.com.br">
                            <img src="~/images/email.png" alt="ASP.NET" />
                            <h3>EMAIL</h3>
                            <p>belohorizonte@duzani.com.br</p>
                        </a>
                    </div>
                    <div class="col-md-3" style="text-align:center;">
                        <a href="tel:+5531975600252">
                            <img src="~/images/whatsapp.png" alt="ASP.NET" />
                            <h3>WHATSAPP</h3>
                            <p>(31)97560-0252</p>
                        </a>
                    </div>
                </div>
                <div class="row" style="color:white">
                    <br />
                    <br />
                    <p>Savannah Mall - Rua Araguari, 359 (Loja 74 - 2º Piso) - Belo Horizonte, MG</p>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3751.0772373869486!2d-43.95077738520185!3d-19.921149786608712!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xa6975bf95878e5%3A0x900c24822de382dd!2sR.+Araguari%2C+359+-+Barro+Preto%2C+Belo+Horizonte+-+MG!5e0!3m2!1spt-BR!2sbr!4v1488931236316" width="500" height="100" frameborder="0" style="border:0" allowfullscreen></iframe>
                    <br />
                    <p>&copy; @DateTime.Now.Year - Duzani Belo Horizonte ®</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
